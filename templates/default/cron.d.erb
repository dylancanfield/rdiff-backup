# rdiff-backup crontab managed by Chef. Changes will be overwritten.

<% if @mailto -%>
MAILTO=<%= @mailto %>
<% end -%>

# Distribute jobs between <%= @shour %>:00 and <%= @ehour %>:00.
<% @jobs.each do |job| -%>
<%= job['minute'] %> <%= job['hour'] %> * * * <%= @suser %> <%= "/home/#{@suser}/scripts/#{job['fqdn']}_#{job['source-dir'].gsub("/", "-")}" %>
<% end -%>
